{
  "name": "dev-connector-root",
  "version": "1.0.0",
  "description": "Root orchestrator for DevConnector frontend and backend",
  "private": true,
  "scripts": {
    "server": "npm run server --prefix backend",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-backend": "npm install --prefix backend",
    "install-client": "npm install --prefix client",
    "install-all": "npm install && npm run install-backend && npm run install-client"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wnossair/dev-connector.git"
  },
  "keywords": [],
  "author": "Wassim Nossair",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wnossair/dev-connector/issues"
  },
  "homepage": "https://github.com/wnossair/dev-connector#readme"
}
